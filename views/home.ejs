<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Khoa Pham</title>
        <style>
            hr {
                visibility: hidden;
            }
            .div-control {
                display: flex;
                width: 300px;
                justify-content: space-between
            }
        </style>
        <script src="../jquery.js"></script>
    </head>
    <body>
        <div>
            <h3><%= name %></h3>
            <div class="div-control">
                <a href="#">Trở lại</a>
                <a href="#">Tiếp</a>
            </div>
            <hr />
            <img src="../<%= image %>" width="300" alt="">
            <hr />
            <div class="div-control">
                <a id="a-like" href="../like/<%= id %>"><%= like %> Like</a>
                <a href="#"><%= dislike %> Dislike</a>
            </div>
        </div>
    </body>
    <script>
        $('#a-like').click((e) => {
            e.preventDefault();
            $.get('../like/<%= id %>', data => $('#a-like').text(data + ' Like'));
        });
    </script>
</html>